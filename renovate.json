{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^remark-gfm"],
      "excludePackageNames": ["remark-gfm"]
    },
    {
      "updateTypes": ["major"],
      "automerge": false
    },
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "timezone": "Canada/Eastern",
  "schedule": ["every weekend"]
}
