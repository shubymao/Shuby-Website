{
  "name": "shuby-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "yarn lint && yarn tidy && yarn lint-style",
    "lint": "next lint --ignore-path .lintignore",
    "tidy": "prettier --w '**/*.{js,jsx,md,ts,tsx,json}' --ignore-path .lintignore",
    "lint-style": "stylelint src/**/*.css --fix ",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "test": "playwright test -c ./tests/playwright.config.ts ",
    "test:report": "yarn test",
    "test:update": "playwright test -c ./tests/playwright.config.ts -u",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "layer",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "no-invalid-position-at-import-rule": null,
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-common-types": "6.4.0",
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-brands-svg-icons": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@tailwindcss/typography": "0.5.9",
    "@types/react-responsive": "8.0.5",
    "emailjs-com": "3.2.0",
    "gray-matter": "4.0.3",
    "gsap": "3.12.1",
    "next": "13.4.9",
    "next-transpile-modules": "10.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "8.0.7",
    "react-responsive": "9.0.2",
    "react-syntax-highlighter": "15.5.0",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.9",
    "@playwright/test": "1.34.3",
    "@svgr/webpack": "8.0.1",
    "@types/node": "18.16.16",
    "@types/react": "17.0.60",
    "@types/react-syntax-highlighter": "15.5.7",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "autoprefixer": "10.4.14",
    "babel-plugin-module-resolver": "5.0.0",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.9",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "postcss": "8.4.24",
    "postcss-import": "15.1.0",
    "prettier": "2.8.8",
    "stylelint": "15.7.0",
    "stylelint-config-standard": "33.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": "prettier --write",
    "*.css": "stylelint --fix"
  }
}
