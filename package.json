{
  "name": "shuby-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "yarn lint && yarn tidy && yarn lintStyle",
    "lint": "next lint --ignore-path .lintignore",
    "tidy": "prettier --w '**/*.{js,jsx,md,ts,tsx,json}' --ignore-path .lintignore",
    "lintStyle": "stylelint src/**/*.css --fix ",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "test": "playwright test -c ./tests/playwright.config.ts ",
    "move-report": "mv ./tests/output/test-report ./tests/reports/",
    "test:report": "yarn test && yarn move-report",
    "test:update": "playwright test -c ./tests/playwright.config.ts -u",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:tailwind/recommended",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "layer",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "no-invalid-position-at-import-rule": null,
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-common-types": "0.3.0",
    "@fortawesome/fontawesome-svg-core": "1.3.0",
    "@fortawesome/free-brands-svg-icons": "6.0.0",
    "@fortawesome/free-solid-svg-icons": "6.0.0",
    "@fortawesome/react-fontawesome": "0.1.17",
    "@tailwindcss/typography": "0.5.2",
    "@types/react-responsive": "8.0.5",
    "emailjs-com": "3.2.0",
    "gray-matter": "4.0.3",
    "gsap": "3.9.1",
    "next": "12.1.0",
    "next-transpile-modules": "9.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "8.0.1",
    "react-responsive": "8.2.0",
    "react-syntax-highlighter": "15.4.5",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.1.0",
    "@playwright/test": "1.19.2",
    "@svgr/webpack": "6.2.1",
    "@types/node": "16.11.26",
    "@types/react": "17.0.40",
    "@types/react-syntax-highlighter": "13.5.2",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "autoprefixer": "10.4.2",
    "babel-plugin-module-resolver": "4.1.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tailwind": "0.2.1",
    "file-loader": "6.2.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.5",
    "postcss": "8.4.8",
    "postcss-import": "14.0.2",
    "prettier": "2.5.1",
    "stylelint": "14.5.3",
    "stylelint-config-standard": "25.0.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2",
    "url-loader": "4.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": "prettier --write",
    "*.css": "stylelint --fix"
  }
}
