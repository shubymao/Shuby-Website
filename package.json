{
  "name": "shuby-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next build && next start",
    "lint": "next lint",
    "lintStyle": "stylelint **/*.css --fix ",
    "move-report": "mv ./tests/output/test-report ./tests/reports/",
    "test": "playwright test -c ./tests/playwright.config.ts",
    "test:report": "yarn test && yarn move-report",
    "test:update": "playwright test -c ./tests/playwright.config.ts -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "eslint . --fix",
      "git add"
    ],
    "src/**/*.css": [
      "stylelint --syntax css --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-common-types": "0.3.0",
    "@fortawesome/fontawesome-svg-core": "1.3.0",
    "@fortawesome/free-brands-svg-icons": "6.0.0",
    "@fortawesome/free-solid-svg-icons": "6.0.0",
    "@fortawesome/react-fontawesome": "0.1.17",
    "@tailwindcss/typography": "0.5.1",
    "@types/react-responsive": "8.0.5",
    "emailjs-com": "3.2.0",
    "gray-matter": "4.0.3",
    "gsap": "3.9.1",
    "next": "12.0.10",
    "next-transpile-modules": "9.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "8.0.0",
    "react-responsive": "8.2.0",
    "react-syntax-highlighter": "15.4.5",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.0.10",
    "@playwright/test": "^1.18.1",
    "@svgr/webpack": "6.2.1",
    "@types/node": "16.11.24",
    "@types/react": "17.0.39",
    "@types/react-syntax-highlighter": "13.5.2",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "autoprefixer": "10.4.2",
    "babel-plugin-module-resolver": "4.1.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tailwind": "0.2.1",
    "file-loader": "6.2.0",
    "husky": "7.0.4",
    "postcss": "8.4.6",
    "postcss-import": "14.0.2",
    "prettier": "2.5.1",
    "stylelint": "14.5.0",
    "stylelint-config-standard": "25.0.0",
    "tailwindcss": "3.0.22",
    "typescript": "4.5.5",
    "url-loader": "4.1.1"
  }
}
